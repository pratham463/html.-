<div id = "my clock display"onload ="show time"></div>
function showTime(){
var date = new Date();
var h = date.getHours();
var m = date.getMinutes();
var s = date.getSeconds();
var session = "AM";
if (h==0){
h = 12;
}
if (h > 12){
h = h -12;
session = "PM";
}
h= (h < 12) ? "0" + h:h; m=(m < 12) ? "0" + m:m; s=(s < 12) ? "0" + s:s; var time=h+":"+m+":"+s+":"+session;
    document.getElementById("my clock display").innerText=time; setTimeout(showTime,1000); } showTime();